@using System.Data
@{
    DataTable locations = ViewBag.Locations;
}

<div>
    <h2 class="mb-3">PONTOS TURISTICOS</h2>
    
    <div class="row g-3 align-items-center mb-4">
        <div class="col-1">
            <a href="/Locations/Create" class="btn btn-primary">Buscar</a>
        </div>
        <div class="col-6">
            <input type="text" id="inputSearch" name="inputSearch" class="form-control" aria-describedby="inputSearch">
        </div>
        <div class="col-3"></div>
        <div class="col-2">
                <a href="/Locations/Create" class="btn btn-primary">Nova Localização</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Localização</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
                <th scope="col">Descrição</th>
                <th scope="col">     </th>
            </tr>
        </thead>
        <tbody>
            @foreach(DataRow row in locations.Rows)
            {
                <tr>
                    <td>@row["Nome"]</td>
                    <td>@row["Localizacao"]</td>
                    <td>@row["Cidade"]</td>
                    <td>@row["Estado"]</td>
                    <td>@row["DescricaoDisplay"]</td>
                    <td><a href="/Locations/Read/@row["Id"]" class="btn btn-light">Detalhes</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
